- content_for :page_title do
  = t('.title')

= simple_form_for @domain_block, url: admin_domain_allows_path do |f|
  = render 'shared/error_messages', object: @domain_block

  %p.hint= t('.hint')

  = f.input :domain, placeholder: t('admin.domain_allows.domain')
  = f.input :severity, collection: DomainBlock.severities.keys, wrapper: :with_label, include_blank: false, label_method: lambda { |type| t(".severity.#{type}") }

  %p.hint= t('.severity.desc_html')

  = f.input :reject_media, as: :boolean, wrapper: :with_label, label: I18n.t('admin.domain_allows.reject_media'), hint: I18n.t('admin.domain_allows.reject_media_hint')

  .actions
    = f.button :button, t('.create'), type: :submit
